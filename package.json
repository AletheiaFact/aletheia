{
  "name": "aletheia",
  "version": "0.0.1",
  "description": "Crowd-sourced fact-checking platform.",
  "private": false,
  "license": "MIT",
  "main": "./dist/server/app.js",
  "scripts": {
    "start": "yarn serve",
    "serve": "service-runner",
    "dev:server": "yarn copy-static-assets && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "dev:front": "parcel ./src/index.html --out-dir dist/client",
    "coverage": "PREQ_CONNECT_TIMEOUT=15 nyc --reporter=lcov _mocha -r ts-node/register test/**/*.ts",
    "seed": "node ./server/infra/database/seeds/generateSeeds.js",
    "build": "parcel build ./src/index.html --out-dir dist/assets --no-minify --public-url './assets' && yarn build-ts && yarn copy-static-assets",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "debug": "yarn build && yarn watch-debug",
    "build:front": "",
    "lint": "tsc --noEmit && yarn lint:check",
    "lint:check": "eslint \"**/*.{js,ts}\"",
    "lint:fix": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static-assets": "ts-node scripts/copyStaticAssets.ts",
    "watch-debug": "yarn copy-static-assets && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\"",
    "watch-node": "nodemon dist/server/server.js  --signal SIGTERM",
    "serve-debug": "nodemon --inspect dist/server/server.js  --signal SIGTERM",
    "clean": "rimraf **/{node_modules,dist}"
  },
  "nodemonConfig": {
      "ignore": ["test/**/*", "src/**/*", "dist/client/**/*"]
  },
  "keywords": [
    "aletheia",
    "REST",
    "API",
    "react",
    "fact-checking"
  ],
  "contributors": [
    {
      "name": "Mateus Santos",
      "email": "mateusbatistasantos@gmail.com",
      "url": "https://github.com/mateusbs17"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "dependencies": {
    "@shelf/jest-mongodb": "^1.0.1",
    "axios": "^0.19.2",
    "domino": "^2.1.0",
    "express": "^4.16.4",
    "js-yaml": "^3.12.0",
    "md5": "^2.2.1",
    "mongoose": "^5.7.5",
    "mongoose-seed": "^0.6.0",
    "swagger-ui-dist": "^3.22.3",
    "service-runner": "^2.7.6",
    "@ant-design/icons": "4.0.0",
    "@ant-design/icons-svg": "^4.0.0",
    "@babel/polyfill": "^7.8.3",
    "antd": "^4.0.0",
    "bootstrap": "^4.4.1",
    "draft-js": ">=0.10.0",
    "draft-js-export-html": "^1.4.1",
    "immutable": "3.x.x",
    "jquery": "1.9.1 - 3",
    "popper.js": "^1.16.0",
    "react": "^16.0.0",
    "react-bootstrap-typeahead": "^4.0.0-rc.2",
    "react-dom": "^0.14.0 || ^15.0.0-rc || ^16.0.0-rc || ^16.0.0",
    "react-google-recaptcha": "^2.0.1",
    "react-paginate": "^6.3.2",
    "react-router-dom": "^5.1.2",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "styled-components": "^5.0.1",
    "underscore": "^1.9.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.11",
    "@types/concurrently": "^5.2.0",
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "@types/shelljs": "^0.8.7",
    "chai": "^4.2.0",
    "concurrently": "^5.2.0",
    "shelljs": "^0.8.4",
    "ts-node": "^8.10.1",
    "jest": "^24.8.0",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "less": "^3.11.1",
    "parcel-bundler": "^1.12.4",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-config-wikimedia": "^0.15.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsdoc": "^21.0.0",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^2.4.1",
    "prettier": "^1.19.1",
    "rimraf": "3.0.2",
    "typescript": "^3.8.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "resolutions": {
    "**/**/serialize-javascript": ">=2.1.1",
    "**/**/https-proxy-agent": ">=2.2.3",
    "**/**/@hapi/hoek": ">=9.0.3",
    "**/**/set-value": ">=3.0.1",
    "**/**/lodash": ">=4.17.12"
  }
}
