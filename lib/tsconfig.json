{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "../dist/lib",
        "rootDir": "../",
        "baseUrl": "./",
        "incremental": true
    },
    "include": ["./**/*"],
    "exclude": [
        "node_modules"
    ]
}
