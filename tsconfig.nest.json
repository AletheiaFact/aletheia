{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist/nest",
        "baseUrl": "./",
        "incremental": true
    },
    "include": ["nest/**/*"],
    "exclude": [
        "node_modules"
    ]
}
